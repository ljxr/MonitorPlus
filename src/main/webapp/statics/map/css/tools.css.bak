html,
body {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  font-size: 12px;
  font-family: 'Arial,Helvetica,SimSun,sans-serif';
}
ul,
li {
  list-style: none;
  margin: 0;
  padding: 0;
}
* {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
}
.m-map-tools {
  position: absolute;
  top: 20px;
  right: 35px;
  background: #fff;
}
.m-map-tools .m-map-tools-menu {
  width: 282px;
  height: 34px;
  -webkit-box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
  box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
}
.m-map-tools .m-map-tools-menu li {
  float: left;
  width: 66px;
  height: 34px;
  padding: 6px 0;
}
.m-map-tools .m-map-tools-menu li a {
  display: inline-block;
  width: 100%;
  height: 22px;
  line-height: 22px;
  padding-left: 6px;
  border-right: 1px solid #eee;
  color: #4c4c4c;
  cursor: pointer;
}
.m-map-tools .m-map-tools-menu li a .icon-angle {
  float: right;
}
.m-map-tools .m-map-tools-menu li:last-child {
  position: relative;
  width: 84px;
  z-index: 1;
}
.m-map-tools .m-map-tools-menu li:last-child a {
  padding-left: 10px;
  border-right: none;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list {
  display: none;
  position: absolute;
  top: 34px;
  left: 0;
  width: 84px;
  background: #fff;
  -webkit-box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
  box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li {
  width: 100%;
  height: 34px;
  line-height: 22px;
  padding: 7px 0 7px 10px;
  cursor: pointer;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li .icon {
  float: left;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li.active,
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li:hover {
  color: #579afc;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li.active .icon-measure,
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li:hover .icon-measure {
  background-position: -85px -54px;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li.active .icon-mark,
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li:hover .icon-mark {
  background-position: -125px -55px;
}
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li.active .icon-share,
.m-map-tools .m-map-tools-menu li:last-child .m-map-tools-list li:hover .icon-share {
  background-position: -168px -56px;
}
.m-map-tools .m-map-tools-menu li:last-child.active .m-map-tools-list {
  display: block;
}
.m-map-tools .m-map-tools-menu li.active a,
.m-map-tools .m-map-tools-menu li:hover a {
  color: #579AFC;
}
.m-map-tools .m-map-tools-menu li.active .icon-microwave,
.m-map-tools .m-map-tools-menu li:hover .icon-microwave {
  background-position: -90px -256px;
}
.m-map-tools .m-map-tools-menu li.active .icon-bayonet,
.m-map-tools .m-map-tools-menu li:hover .icon-bayonet {
  background-position: -43px -174px;
}
.m-map-tools .m-map-tools-menu li.active .icon-road-condition,
.m-map-tools .m-map-tools-menu li:hover .icon-road-condition {
  background-position: -5px -56px;
}
.m-map-tools .m-map-tools-menu li.active .icon-tool,
.m-map-tools .m-map-tools-menu li:hover .icon-tool {
  background-position: -45px -54px;
}
.m-map-tools .m-map-tools-menu li.avtive .icon-angle {
  background-position: -6px -169px;
}
.m-map-panels {
  position: absolute;
  top: 44px;
  left: 0;
  width: 282px;
}
.m-map-panels .m-map-panel {
  position: relative;
  width: 100%;
  height: 0;
  overflow: hidden;
  -webkit-box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
  box-shadow: 1px 2px 1px rgba(0, 0, 0, 0.15);
  background: #fff;
}
.m-map-panels .m-map-panel .m-map-panel-legend {
  height: 35px;
  padding: 8px;
  border-bottom: 1px solid #dadada;
}
.m-map-panels .m-map-panel .m-map-panel-content {
  height: 34px;
  line-height: 34px;
  padding-left: 8px;
}
.m-map-panels .m-map-panel .m-map-panel-content .icon-refresh {
  cursor: pointer;
}
.m-map-panels .m-map-panel .m-map-panel-content .icon-refresh:hover {
  background-position: -68px -327px;
}
.m-map-panels .m-map-panel .btn-close {
  position: absolute;
  top: 5px;
  right: 5px;
  display: block;
  width: 22px;
  height: 22px;
  cursor: pointer;
}
.m-map-panels .m-map-panel .btn-close:hover .icon-close {
  background-position: -159px -331px;
}
.m-map-panels .m-map-panel.m-map-panel-bayonet .traffic-legend {
  color: #4c4c4c;
}
.traffic-legend {
  display: inline-block;
  margin-right: 10px;
  padding: 3px 8px;
  border: 0;
  color: #fff;
}
.traffic-legend.level1 {
  background-color: #b00;
}
.traffic-legend.level2 {
  background-color: #f23030;
}
.traffic-legend.level3 {
  background-color: #ff9f19;
}
.traffic-legend.level4 {
  background-color: #17bf00;
}
.icon {
  display: inline-block;
  width: 22px;
  height: 22px;
  vertical-align: middle;
  background: url(../images/icon_tools.png) no-repeat;
}
.icon-microwave {
  background-position: -49px -256px;
}
.icon-bayonet {
  background-position: -43px -174px;
}
.icon-road-condition {
  background-position: -5px -121px;
}
.icon-tool {
  background-position: -45px -122px;
}
.icon-measure {
  background-position: -85px -122px;
}
.icon-mark {
  background-position: -120px -124px;
}
.icon-share {
  background-position: -168px -122px;
}
.icon-angle {
  background-position: -6px -8px;
}
.icon-close {
  background-position: -130px -331px;
}
.icon-refresh {
  background-position: -40px -327px;
}
.icon-bayonet-normal {
  background-position:  -43px -174px;;
}
.icon-bayonet-abnormal {
  background-position:  -43px -174px;;
}
